<mvc:View controllerName="application.controller.detalheProdutos" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:wt="sap.ui.demo.wt.control">
	<Page title="{i18n>detailPageTitleProdutos}" showNavButton="true" navButtonPress="onNavBack">
		<ObjectHeader responsive="true" fullScreenOptimized="true" intro="{Predilecta>Name}" title="{Predilecta>Category}">
			<attributes>
				<ObjectAttribute title="Quantidade" text="{Predilecta>Quantity}"></ObjectAttribute>
				<ObjectAttribute title="Data Vencimento"
					text="{ path: 'Predilecta>dueDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'long', source: { pattern: 'yyyy-MM-ddTHH:mm:ss' } } }"/>
			</attributes>
		</ObjectHeader>
	</Page>
</mvc:View>