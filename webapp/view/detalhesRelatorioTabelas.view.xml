<mvc:View height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" controllerName="application.controller.detalhesRelatorioTabelas"
	xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:semantic="sap.m.semantic">
	<Page id="master" navButtonPress="onNavBack" showNavButton="true" title="Consultar Tabela Preço">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<ToolbarSpacer/>
				<!--<Button icon="sap-icon://download" press="onDataExport"/>-->
				<SearchField class="camposDialog" id="idProdutoRelatorio" placeholder="Digite do Produto" enableSuggestions="true"
					search="onItemChange" suggest="_handleValueHelpSearch" width="100%"
					suggestionItems="{ path: 'produtosRelatorio>/', sorter: { path: 'ProdutoId' } }">
					<suggestionItems>
						<SuggestionItem text="{produtosRelatorio>ProdutoId}" description="{produtosRelatorio>Descricao}" key="{produtosRelatorio>ProdutoId}"/>
					</suggestionItems>
				</SearchField>
			</Toolbar>
		</subHeader>
		<semantic:FullscreenPage id="page">
			<semantic:content>
				<Table id="idtablePrecos" busyIndicatorDelay="2000" growing="true" growingScrollToLoad="false" growingThreshold="10"
					noDataText="Não possui itens na tabela de preço" updateFinished="onUpdateFinished" width="100%"
					items="{ path: 'modelTabPreco>/', sorter: { path: 'Matnr', ascending: true}}">
					<columns>
						<Column demandPopin="false" minScreenWidth="280px" >
							<Text text="Cod"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="960px" >
							<Text text="Descrição"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="460px" >
							<Text text="Pallet"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="320px" >
							<Text text="CXs"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="380px" >
							<Text text="Preço Bruto"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="320px" >
							<Text text="Canal"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="320px" >
							<Text text="Promocional"/>
						</Column>
						<Column demandPopin="false" minScreenWidth="320px" >
							<Text text="Preço c/ST"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="320px" >
							<Text text="ST"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="320px" >
							<Text text="Contrato"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem >
							<cells>
								<Text text="{modelTabPreco>Matnr}" />
								<Text text="{modelTabPreco>Maktx}" />
								<Text text="{modelTabPreco>QntPallet}" />
								<Text text="{modelTabPreco>QntCaixa}" />
								<Text text="R$: {modelTabPreco>ValPrecoVenda}" />
								<Text text="{modelTabPreco>PercCanalMax} %" />
								<Text text="{modelTabPreco>PercPromoMax} %" />
								<Text text="R$: {modelTabPreco>ValPrecoUnitSt}" />
								<Text text="{modelTabPreco>PerSubTri} %" />
								<Text text="{modelTabPreco>PctDescContrato} %" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</semantic:content>
		</semantic:FullscreenPage>
	</Page>
</mvc:View>