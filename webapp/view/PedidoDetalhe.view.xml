												<core:Item key="{modelTipoPedidos>TipoPedido}" text="{modelTipoPedidos>TipoPedido}"/>
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Select>
											<Label text="Data pedido *">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Input id="idDataPedido" enabled="false" value="{modelPedido>/DataFim} - {modelPedido>/HoraFim}" change="onChangeDataPedido">
