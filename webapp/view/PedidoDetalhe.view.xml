											<Label text="Domicílio Fiscal"/>
											<Input id="idDomFiscal" enabled="false" value="{path: 'modelCliente>/Txjcd'} - {path: 'modelCliente>/Ort01'}"/>
											<Label text="Suframa"/>
											<Input id="idSuframa" value="{modelCliente>/Suframa}" enabled="false"/>
											<Label text="Limite de Crédito"/>
											<Input id="idLimCredito" enabled="false"
