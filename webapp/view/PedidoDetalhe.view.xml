											<!--<Label text="Limite Crédito Disponível" />-->
											<!--<Input id="idLimiteCreditoDisp" enabled="false"-->
											<!--value="R$: {path: 'modelCliente>/CredLimReq', type: 'sap.ui.model.type.Float', formatOptions: {milharSeparetor: '.', decimalSeparator: ',', maxFractionDigits: 2, minFractionDigits : 2 }, constraints : { minimum: '0', maximum: '99' }}"/>-->
											<Label text="Fatura Saldo"/>
											<Input id="idFaturaSaldo" value="{path: 'modelCliente>/CancelaSaldo', formatter: '.onFormatCancelaSaldo'}" enabled="false"/>
											<Label text="Simples Nacional"/>
											<Input id="idSN" value="{path : 'modelCliente>/Tdt', formatter: '.onFormatSimplesNacional'}" enabled="false"/>
										</f:content>
									</f:SimpleForm>
								</ScrollContainer>
							</IconTabFilter>
							<IconTabFilter id="tabPedidoWebStep" text="Pedido Web" icon="sap-icon://notes" key="tab2">
