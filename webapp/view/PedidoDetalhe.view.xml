												change="onChangeVencimento1">
												<core:Item key="{modelVencimentos1>Zterm}" text="{path: 'modelVencimentos1>DescCond'}"/>
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Select>
											<Label id="idLabelContrato" text="Contrato" visible="true">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Input id="idContrato" visible="true" enabled="false" value="{path: 'modelPedido>/Contrato'}">
												<layoutData>
													<layout:GridData span="L4 M4 "/>
												</layoutData>
											</Input>
											<Label text="Índice *">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Input id="idIndice" enabled="false"
												value="{path: 'modelPedido>/IndiceFinal', type: 'sap.ui.model.type.Float', formatOptions: {milharSeparetor: '.', decimalSeparator: ',', maxFractionDigits: 2, minFractionDigits : 2 }, constraints : { minimum: '0', maximum: '99' }} %">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Input>
											<Label text="Local entrega *">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Select id="idLocalEntrega" selectedKey="{modelPedido>/LocalEntrega}" forceSelection="false" showSecondaryValues="true"
												items="{ path: 'modelLocaisEntregas>/' }" change="onChangeInfo">
												<core:Item key="{modelLocaisEntregas>Addrnumber}" text="{modelLocaisEntregas>Rua} - {modelLocaisEntregas>Cidade}"/>
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Select>
											<Label text="Data entrega">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<DatePicker id="idDataEntrega" class="readOnly" required="true" displayFormat="dd/MM/yyyy" valueFormat="dd/MM/yyyy"
												value="{modelPedido>/DataEntrega}" change="onChangeDataEntrega">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</DatePicker>
											<Label text="Email Cliente">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Input id="idEmailCliente" type="Email" value="{modelPedido>/EmailCliente}" enabled="false" change="onChangeInfo">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Input>
											<Label text="Data entrega sujerida">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<DatePicker id="idDataEntregaSujerida" required="true" displayFormat="dd/MM/yyyy" valueFormat="dd/MM/yyyy" enabled="false"
												valueState="Warning" value="{modelPedido>/DataEntregaSujerida}">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</DatePicker>
											<Label text="Enviar Cópia do Pedido p/ Cliente">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<CheckBox id="idCheckEmailCliente" text="" selected="{modelPedido>/EnviarEmailCliente}" enabled="true" select="onChangeInfo">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</CheckBox>
											<Label text="Data limite faturamento *">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true" />
												</layoutData>
											</Label>
											<DatePicker id="idDataLimite" displayFormat="dd/MM/yyyy" valueFormat="dd/MM/yyyy" change="onChangeInfo" value="{modelPedido>/DataLimite}">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</DatePicker>
											<Label text="Email Representante">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Input id="idEmailRepres" value="{modelPedido>/EmailRepres}" enabled="false">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Input>
											<Label text="Msg p/ sair na NF 01">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Select id="idMsg1" selectedKey="{modelPedido>/MsgPedido1}" forceSelection="false" items="{ path: 'modelMsgPedido>/' }"
												showSecondaryValues="true" change="onChangeMsg1">
												<core:Item key="{modelMsgPedido>CodMensagem}" text="{modelMsgPedido>DesMensagem}"/>
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Select>
											<Label text="Enviar Cópia do Pedido p/ Repres">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<CheckBox id="idCheckEmailRepres" text="" selected="{modelPedido>/EnviarEmailRepres}" enabled="true">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</CheckBox>
											<Label text="Msg p/ sair na NF 02">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Select id="idMsg2" selectedKey="{modelPedido>/MsgPedido2}" showSecondaryValues="true" forceSelection="false"
												items="{ path: 'modelMsgPedido2>/' }" change="onChangeMsg2">
												<core:Item key="{modelMsgPedido2>CodMensagem}" text="{modelMsgPedido2>DesMensagem}"/>
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Select>
											<Label text="Msg p/ sair na NF 03">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Select id="idMsg3" selectedKey="{modelPedido>/MsgPedido3}" showSecondaryValues="true" forceSelection="false"
												items="{ path: 'modelMsgPedido3>/' }" change="onChangeMsg3">
												<core:Item key="{modelMsgPedido3>CodMensagem}" text="{modelMsgPedido3>DesMensagem}"/>
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Select>
											<Label text="Observações para equipe de logística">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<TextArea id="idObservacoes" maxLength="100" value="{modelPedido>/ObsPedido}" change="onChangeInfo">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</TextArea>
										</f:content>
									</f:SimpleForm>
									<Toolbar>
										<ToolbarSpacer/>
										<Button id="idLIberarItens" text="Salvar" type="Accept" press="onLiberarItensPedido"/>
										<Button text="Cancelar" press="onCancelarPedido"/>
									</Toolbar>
								</ScrollContainer>
							</IconTabFilter>
							<IconTabFilter id="tabItensPedidoStep" text="Itens Pedido" icon="sap-icon://add" key="tab3" count="{modelAux>/ItensPedidoTab}"
								enabled="false">
								<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
									<Toolbar id="lineItemsToolbar">
										<Title id="lineItemsHeader"/>
										<ToolbarSpacer/>
										<Label text="Adicionar Itens"/>
										<Button id="idAddItens" icon="sap-icon://add" press="onNovoItem" type="Emphasized"/>
									</Toolbar>
									<Table id="table_pedidos" width="100%" items="{ path:'modelItensPedidoGrid>/', sorter: { path: 'IndexItem', ascending: true }}"
										updateFinished="onListUpdateFinished" mode="Delete" delete="onDeletarItem" class="margins" itemPress="onEditarItemPress"
										noDataText="Nenhum item cadastrado." growing="true" growingThreshold="99" alternateRowColors="true" growingTriggerText="Próximo "
										busyIndicatorDelay="0" fixedLayout="false">
										<columns>
											<Column minScreenWidth="420px" width="30px" hAlign="Left" visible="false">
												<Text text="Id" textAlign="Left"/>
											</Column>
											<Column minScreenWidth="320px" hAlign="Left" width="80px">
												<Text text="Item" textAlign="Left"/>
											</Column>
											<Column minScreenWidth="665px" demandPopin="false" hAlign="Left">
												<Text text="Descrição" textAlign="Left"/>
											</Column>
											<Column minScreenWidth="420px" demandPopin="false" hAlign="Left" width="40px">
												<Text text="UM" textAlign="Left"/>
											</Column>
											<Column minScreenWidth="320px" hAlign="Left" width="60px">
												<Text text="Qnt" textAlign="Left"/>
											</Column>
											<Column minScreenWidth="815px" demandPopin="false" hAlign="Left" width="100px">
												<Text text="P. Tab." textAlign="Left"/>
											</Column>
											<Column minScreenWidth="320px" demandPopin="false" hAlign="Left" width="100px">
												<Text text="P. Vend." textAlign="Left"/>
											</Column>
											<Column minScreenWidth="360px" demandPopin="false" hAlign="Left" width="110px">
												<Text text="Vlr Total" textAlign="Left"/>
											</Column>
											<Column minScreenWidth="740px" demandPopin="false" hAlign="Left" width="110px">
												<Text text="T + ST" textAlign="Left"/>
											</Column>
											<Column minScreenWidth="470px" demandPopin="false" width="60px" hAlign="Center">
												<Text text="Rent." textAlign="Left"/>
											</Column>
										</columns>
										<items class="margins">
											<ColumnListItem type="Inactive">
												<cells>
													<Text text="{path : 'modelItensPedidoGrid>IndexItem', type: 'sap.ui.model.type.Integer'}" visible="true" textAlign="Left"/>
													<Text text="{modelItensPedidoGrid>Matnr}" textAlign="Left"/>
													<Text text="{path: 'modelItensPedidoGrid>Maktx'}" textAlign="Left"/>
													<Text text="{modelItensPedidoGrid>Meins}" textAlign="Left"/>
													<Text text="{modelItensPedidoGrid>QtdPedida}" textAlign="Left"/>
													<Text
														text="R$: {path: 'modelItensPedidoGrid>ValPrecoOrig', type: 'sap.ui.model.type.Float', formatOptions: {milharSeparetor: '.', decimalSeparator: ',', maxFractionDigits: 2, minFractionDigits : 2 }, constraints : { minimum: '0', maximum: '99' }}"
														textAlign="Left"/>
													<Text
														text="R$: {path: 'modelItensPedidoGrid>ValPrecoInform', type: 'sap.ui.model.type.Float', formatOptions: {milharSeparetor: '.', decimalSeparator: ',', maxFractionDigits: 2, minFractionDigits : 2 }, constraints : { minimum: '0', maximum: '99' }}"
														textAlign="Left"/>
													<Text
														text="R$: {path: 'modelItensPedidoGrid>ValorTotal', type: 'sap.ui.model.type.Float', formatOptions: {milharSeparetor: '.', decimalSeparator: ',', maxFractionDigits: 2, minFractionDigits : 2 }, constraints : { minimum: '0', maximum: '99' }}"
														textAlign="Left"/>
													<Text
														text="R$: {path: 'modelItensPedidoGrid>ValTotItemSt', type: 'sap.ui.model.type.Float', formatOptions: {milharSeparetor: '.', decimalSeparator: ',', maxFractionDigits: 2, minFractionDigits : 2 }, constraints : { minimum: '0', maximum: '99' }}"
														textAlign="Left"/>
													<Image src="{path : 'modelItensPedidoGrid>RentImg'}" width="30px" backgroundPosition="Center"/>
													<!--<ObjectListItem number="{path : 'modelItensPedidoGrid>PercLucro', formatter: '.myFormatterCodEmpresa' }%" numberState="{= ${modelItensPedidoGrid>PercLucro} >= 0 ? 'Success' : 'Error' }" hAlign="Right"/>-->
													<!--<ObjectListItem number="{path : 'modelItensPedidoGrid>PercLucro', formatter: '.myFormatterRentabilidade' }%" numberState="{= ${modelItensPedidoGrid>PercLucro} >= 0 ? 'Success' : 'Error' }" hAlign="Right"/>-->
												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</ScrollContainer>
							</IconTabFilter>
