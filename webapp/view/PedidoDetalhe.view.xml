													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Input>
											<Label text="Tabela de preço *">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Select id="idTabelaPreco" showSecondaryValues="false" forceSelection="false" items="{ path: 'modelTabPrecos>/' }"
