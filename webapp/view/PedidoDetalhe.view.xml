												<core:Item key="{modelTabPrecos>Pltyp}" text="{modelTabPrecos>Pltyp} - {modelTabPrecos>Ptext}"/>
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Select>
											<Label text="Tipo transporte *">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Select id="idTipoTransporte" forceSelection="false" items="{ path: 'modelFretes>/' }" showSecondaryValues="true"
												selectedKey="{modelPedido>/Inco1}" busyIndicatorDelay="0" busy="{modelDelay>/Frete}" change="onChangeInfo">
												<core:Item key="{modelFretes>Inco1}" text="{modelFretes>Inco1} - {modelFretes>Bezei}"/>
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Select>
											<Label text="Situação">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Input id="idSituacao" value="{modelPedido>/IdStatusPedido} - {modelPedido>/SituacaoPedido}" enabled="false">
												<layoutData>
													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Input>
											<Label text="Vencimento(s) *">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Select id="idVencimento1" showSecondaryValues="false" forceSelection="false" busyIndicatorDelay="0" busy="{modelDelay>/Vencimento1}"
