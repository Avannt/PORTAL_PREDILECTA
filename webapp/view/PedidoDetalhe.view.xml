											<Label text="Endereço"/>
											<Input id="idEndereco" value="{modelCliente>/Stras}" enabled="false"/>
											<Label text="Cidade"/>
											<Input id="idCidade" value="{modelCliente>/Ort01} - {modelCliente>/Regio}" enabled="false"/>
											<Label text="E-mail NF "/>
											<Input id="idEmail1" value="{modelCliente>/EmailNf}" enabled="false"/>
											<Label text="E-mail Comprador"/>
											<Input id="idEmail2" value="{modelCliente>/EmailComprador}" enabled="false"/>
											<Label text="E-mail Financeiro"/>
											<Input id="idEmail3" value="{modelCliente>/EmailFinanc}" enabled="false"/>
											<Label text="Regime Subst. Trib."/>
											<Input id="idInscAuxSubstTrib" enabled="false" value="{path: 'modelCliente>/DescSubstTrib'}"/>
											<Label text="Data da Vigência"/>
