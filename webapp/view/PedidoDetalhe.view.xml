													<layout:GridData span="L4 M4"/>
												</layoutData>
											</Input>
											<Label text="Pedido origem cliente *">
												<layoutData>
													<layout:GridData span="L2 M2" linebreakM="true"/>
												</layoutData>
											</Label>
											<Input id="idPedidoOrigem" maxLength="12" value="{modelPedido>/PedidoOrigem}" change="onChangeInfo">
