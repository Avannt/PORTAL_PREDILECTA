												value="{path: 'modelPedido>/ValDescDisp', type: 'sap.ui.model.type.Float', formatOptions: {milharSeparetor: '.', decimalSeparator: ',', maxFractionDigits: 2, minFractionDigits : 2 }, constraints : { minimum: '0', maximum: '99' }}"
												enabled="false" class="desabilitado marginBottomInpu"/>
											<Label text="Tipo de Integração Boleto"/>
											<Input id="idTipoIntegracaoBoleto" value="{modelPedido>/TipoIntegrBol}" enabled="false" class="desabilitado"/>
