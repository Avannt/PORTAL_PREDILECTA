<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:semantic="sap.m.semantic" height="100%" controllerName="application.controller.relatorioTitulos">
	<Page id="master" navButtonPress="onNavBack" showNavButton="true" title="Relatório de Títulos" showFooter="false">
		<content>
			<Table id="idtableTitulos" growing="true" growingScrollToLoad="false" growingThreshold="5" noDataText="Nenhuma duplicatas em aberto" updateFinished="onUpdateFinished" width="100%" selectionChange="onSelectionChange" alternateRowColors="true" growingTriggerText="Próximo &gt;&gt;&gt;" items="{ path: 'TitulosAbertos>/', sorter: { path: 'Zfbdt', descending: true}}">
				<headerToolbar>
					<Toolbar height="100%" class="backGround">
						<Panel xmlns="sap.m" expandable="true" expanded="true" id="panel0" >
							<content>
								<f:SimpleForm id="SimpleFormChange471" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="2" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" emptySpanM="1" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
									<f:content>
										<Label text="Cliente"/>
										<SearchField id="idClientesRelatorio1" placeholder="Digite Código ou Nome do Cliente" enableSuggestions="true" value="{modelItem>/Matnr}" search="onItemChange" suggest="onSuggestClientes" suggestionItems="{ path: 'modelClientes>/', sorter: { path: 'Kunnr', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelClientes>Kunnr}" description="{modelClientes>Name1}" key="{modelClientes>Kunnr}"/>
											</suggestionItems>
										</SearchField>
										<Label text="Cliente"/>
										<SearchField id="idClientesRelatorio" placeholder="Digite Código ou Nome do Cliente" enableSuggestions="true" value="{modelItem>/Matnr}" search="onItemChange" suggest="onSuggestClientes" suggestionItems="{ path: 'modelClientes>/', sorter: { path: 'Kunnr', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelClientes>Kunnr}" description="{modelClientes>Name1}" key="{modelClientes>Kunnr}"/>
											</suggestionItems>
										</SearchField>
										<Label id="idVencimento" text="Vencimento "/>
										<DatePicker id="idCDatePicker" change="onItemChange" placeholder="Vencimento" width="100%"/>
									</f:content>
								</f:SimpleForm>
							</content>
						</Panel>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column minScreenWidth="320px" width="110px">
						<Text text="Doc. Fat."/>
					</Column>
					<Column minScreenWidth="900px" demandPopin="true" popinDisplay="Inline" hAlign="Left">
						<Text text="Cliente"/>
					</Column>
					<Column minScreenWidth="610px" demandPopin="true" popinDisplay="Inline" hAlign="Left">
						<Text text="Emissão"/>
					</Column>
					<Column minScreenWidth="420px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="100px">
						<Text text="Venc."/>
					</Column>
					<!--</Column>-->
					<Column minScreenWidth="520px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="120px">
						<Text text="Vlr Orig"/>
					</Column>
					<Column minScreenWidth="320px" demandPopin="true" popinDisplay="Inline" width="auto">
						<Text text="Dias Atrs."/>
					</Column>
					<Column minScreenWidth="520px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="120px">
						<Text text="Doc. Num."/>
					</Column>
					<Column minScreenWidth="320px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="80px">
						<Text text="Status"/>
					</Column>
					<Column minScreenWidth="320px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="50px">
						<Text text=""/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Inactive">
						<cells>
							<Text text="{TitulosAbertos>DocFat}"/>
							<Text text="{TitulosAbertos>Kunnr} - {TitulosAbertos>Name1}"/>
							<Text text="{path: 'TitulosAbertos>Budat'}"/>
							<Text text="{path: 'TitulosAbertos>Zfbdt'}"/>
							<Text text="R$ {path: 'TitulosAbertos>Dmbtr', type: 'sap.ui.model.type.Float', formatOptions: {milharSeparetor: '.', decimalSeparator: ',', maxFractionDigits: 2, minFractionDigits : 2 }, constraints : { minimum: '0', maximum: '99' }}"/>
							<Text text="{TitulosAbertos>DiasAtraso}"/>
							<Text text="{TitulosAbertos>DocNum}"/>
							<Text text="{path : 'TitulosAbertos>Status'}"/>
							<Image src="{path : 'TitulosAbertos>PathImg'}" width="50%" tooltip="{path : 'TitulosAbertos>Status'}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>