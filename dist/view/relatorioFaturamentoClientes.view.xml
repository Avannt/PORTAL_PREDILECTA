<mvc:View height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:layout="sap.ui.layout"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" controllerName="application.controller.relatorioFaturamentoClientes"
	xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:semantic="sap.m.semantic">
	<Page id="master" navButtonPress="onNavBack" showNavButton="true" title="Relatório de Faturamento Clientes" showFooter="false">
		<content>
			<Table id="idtableTitulos" growing="true" growingScrollToLoad="false" growingThreshold="5" noDataText="Nenhum registro encontrado"
				updateFinished="onUpdateFinished" width="100%" selectionChange="onSelectionChange" alternateRowColors="true"
				growingTriggerText="Próximo >>>" items="{ path: 'modelFatClientes>/', sorter: { path: 'Kunnr', descending: true}}">
				<headerToolbar>
					<Toolbar height="100%" class="backGround">
						<Panel xmlns="sap.m" id="idPanelFiltro" headerText="Ocultar Filtros"  expandable="true" expanded="true" expand="onExpandFiltro">
							<content>
								<f:SimpleForm id="SimpleFormChange471" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="2"
									labelSpanS="12" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" emptySpanM="1" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
									singleContainerFullSize="false">
									<f:content>
										<Label text="Centro"/>
										<SearchField id="idCentroIni" placeholder="Digite Código ou Nome do Centro" enableSuggestions="true" value="{modelParametros>/WerksIni}" suggest="onSuggestCentroIni" suggestionItems="{ path: 'modelCentros>/', sorter: { path: 'Werks', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelCentros>Werks}" description="{modelCentros>NomeCentro}" key="{modelCentros>Werks}"/>
											</suggestionItems>
										</SearchField>
										<SearchField id="idCentroFim" placeholder="Digite Código ou Nome do Centro" enableSuggestions="true" value="{modelParametros>/WerksFim}" suggest="onSuggestCentroFim" suggestionItems="{ path: 'modelCentros>/', sorter: { path: 'Werks', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelCentros>Werks}" description="{modelCentros>NomeCentro}" key="{modelCentros>Werks}"/>
											</suggestionItems>
										</SearchField>
										
										<Label text="Cliente"/>
										<SearchField id="idClienteIni" placeholder="Digite Código ou Nome do Cliente" enableSuggestions="true" value="{modelParametros>/KunnrIni}" suggest="onSuggestClienteIni" suggestionItems="{ path: 'modelClientes>/', sorter: { path: 'Kunnr', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelClientes>Kunnr}" description="{modelClientes>Name1}" key="{modelClientes>Kunnr}"/>
											</suggestionItems>
										</SearchField>
										<SearchField id="idClienteFim" placeholder="Digite Código ou Nome do Cliente" enableSuggestions="true" value="{modelParametros>/KunnrFim}" suggest="onSuggestClienteFim" suggestionItems="{ path: 'modelClientes>/', sorter: { path: 'Kunnr', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelClientes>Kunnr}" description="{modelClientes>Name1}" key="{modelClientes>Kunnr}"/>
											</suggestionItems>
										</SearchField>
										
										<Label text="Rede"/>
										<SearchField id="idRedeIni" placeholder="Digite Código ou Nome da Rede" enableSuggestions="true" value="{modelParametros>/Kvgr4Ini}" suggest="onSuggestRedeIni" suggestionItems="{ path: 'modelRedes>/', sorter: { path: 'Kvgr4', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelRedes>Kvgr4}" description="{modelRedes>DescKvgr4}" key="{modelRedes>Kvgr4}"/>
											</suggestionItems>
										</SearchField>
										<SearchField id="idRedeFim" placeholder="Digite Código ou Nome da Rede" enableSuggestions="true" value="{modelParametros>/Kvgr4Fim}" suggest="onSuggestRedeFim" suggestionItems="{ path: 'modelRedes>/', sorter: { path: 'Kvgr4', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelRedes>Kvgr4}" description="{modelRedes>DescKvgr4}" key="{modelRedes>Kvgr4}"/>
											</suggestionItems>
										</SearchField>
										
										<Label text="Bandeira"/>
										<SearchField id="idBandeiraIni" placeholder="Digite Código ou Nome da Bandeira" enableSuggestions="true" value="{modelParametros>/Kvgr5Ini}" suggest="onSuggestBandeiraIni" suggestionItems="{ path: 'modelBandeiras>/', sorter: { path: 'Kvgr5', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelBandeiras>Kvgr4}" description="{modelBandeiras>DescKvgr4}" key="{modelBandeiras>Kvgr5}"/>
											</suggestionItems>
										</SearchField>
										<SearchField id="idBandeiraFim" placeholder="Digite Código ou Nome da Bandeira" enableSuggestions="true" value="{modelParametros>/Kvgr5Fim}" suggest="onSuggestBandeiraFim" suggestionItems="{ path: 'modelBandeiras>/', sorter: { path: 'Kvgr5', ascending: true }}">
											<suggestionItems>
												<SuggestionItem text="{modelBandeiras>Kvgr5}" description="{modelBandeiras>DescKvgr5}" key="{modelBandeiras>Kvgr5}"/>
											</suggestionItems>
										</SearchField>
										
										<Label id="idPeriodo" text="Período"/>
										<DateRangeSelection displayFormat="dd/MM/yyyy" id="idCDateRange" value="{modelParametros>/Periodo}" placeholder="Período" width="100%"/>
										<Button id="idBtnFiltrar" text="Filtrar" type="Emphasized" press="onPress"/>
									</f:content>
								</f:SimpleForm>
							</content>
						</Panel>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column minScreenWidth="320px" width="110px">
						<Text text="Cliente"/>
					</Column>
					<Column minScreenWidth="900px" demandPopin="true" popinDisplay="Inline" hAlign="Left">
						<Text text="Razão Social"/>
					</Column>
					<Column minScreenWidth="610px" demandPopin="true" popinDisplay="Inline" hAlign="Left">
						<Text text="CNPJ"/>
					</Column>
					<Column minScreenWidth="420px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="100px">
						<Text text="Clien.Desde"/>
					</Column>
					<!--</Column>-->
					<Column minScreenWidth="520px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="120px">
						<Text text="Rede"/>
					</Column>
					<Column minScreenWidth="320px" demandPopin="true" popinDisplay="Inline" width="auto">
						<Text text="Bandeira"/>
					</Column>
					<Column minScreenWidth="520px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="120px">
						<Text text="UF"/>
					</Column>
					<Column minScreenWidth="320px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="80px">
						<Text text="Cidade"/>
					</Column>
					<Column minScreenWidth="320px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="50px">
						<Text text="Vlr Fatur."/>
					</Column>
					<Column minScreenWidth="320px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="50px">
						<Text text="%Part."/>
					</Column>
					<Column minScreenWidth="320px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="50px">
						<Text text="Qt Pedidos"/>
					</Column>
					<Column minScreenWidth="320px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="50px">
						<Text text="%Rent."/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Inactive">
						<cells>
							<Text text="{modelFatClientes>Kunnr}"/>
							<Text text="{modelFatClientes>Name1Cli}"/>
							<Text text="{modelFatClientes>Stcd1}"/>
							<Text text=""/>
							<Text text="{modelFatClientes>Kvgr4}"/>
							<Text text="{modelFatClientes>Kvgr5}"/>
							<Text text="{modelFatClientes>Region}"/>
							<Text text="{modelFatClientes>City1}"/>
							<Text text="{modelFatClientes>ValFaturado}"/>
							<Text text="{modelFatClientes>PctPartic}"/>
							<Text text="{modelFatClientes>QtdPedidos}"/>
							<Text text="{modelFatClientes>PctRentab}"/>
							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>